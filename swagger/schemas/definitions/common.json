{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
    	"label": {
    		"type": "string",
    		"minLength": 1,
    		"maxLength": 256,
            "description": "Application-specific label"
    	},
    	"description": {
    		"type": "string"
    	},
    	"objectid": {
		    "type": "string",
		    "pattern": "^[a-fA-F0-9]{24}$",
            "description": "Unique database ID"
		},
		"string-id": {
			"type": "string",
			"pattern": "^[0-9a-zA-Z_-]{2,64}$",
            "description": "Unique database ID"
		},
        "lowercase-string-id": {
            "type": "string",
            "maxLength": 64,
            "minLength": 2,
            "pattern": "^[0-9a-z][0-9a-z.@_-]{0,30}[0-9a-z]$"
        },
		"user-id": {
			"type": "string",
			"format": "email",
            "description": "Database ID of a user"
		},
        "info": {
            "type": "object",
            "description": "Free-form information storage"
        },
        "timestamp": {
        	"type": ["string", "null"],
        	"format": "date-time"
        },
        "classification": {
          "type": "object",
          "patternProperties": {
            "^[0-9a-zA-Z_-]*$":{
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "deleted-count": {
            "type":"object",
            "properties": {
                "deleted": {
                    "type": "integer"
                }
            }
        },
        "modified-count": {
            "type": "object",
            "properties": {
                "modified": {
                    "type": "integer"
                }
            }
        },
        "object-created": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string"
                }
            },
            "x-sdk-return": "_id"
        },
        "key": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"
                }
            }
        }
    }
}
